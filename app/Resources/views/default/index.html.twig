{% extends 'base.html.twig' %}

{% block nav %}

    {% for category in categories %}
        <li class="item {{ category.name in app.request.requestUri ? 'active' : '' }}"><a href="{{ path('home_page', { 'name': category.name }) }}">{{ category.name | upper }}</a></li>
    {% endfor %}

{% endblock %}

{% block section %}

    {% for post in posts %}
        <article>
            <header>
                <h2>{{ post.title }}</h2>
                <em>DECEMBER 15, 2018 - 400 Comments</em>
            </header>
            <p>{{ post.content }}</p>

            <a class="btn" href="{{ path('show_post', {'id': post.id}) }}">Read more...</a>
        </article>
    {% endfor %}

    {#<a href="{{ path('home_category') }}">Manage Categories</a>#}
    {#<a href="{{ path('new_post') }}">New Recipe</a>#}
{% endblock %}
